<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd
         http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Computer components shop</display-name>

    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>org.example.servlets.ClientServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/clients</url-pattern>
        <url-pattern>/clients/back</url-pattern>
        <url-pattern>/clients/listClients</url-pattern>
        <url-pattern>/clients/addClient</url-pattern>
        <url-pattern>/clients/editClient</url-pattern>
        <url-pattern>/clients/updateClient</url-pattern>
        <url-pattern>/clients/deleteClient</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProcessorServlet</servlet-name>
        <servlet-class>org.example.servlets.ProcessorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProcessorServlet</servlet-name>
        <url-pattern>/processors</url-pattern>
        <url-pattern>/processors/back</url-pattern>
        <url-pattern>/processors/listProcessors</url-pattern>
        <url-pattern>/processors/addProcessor</url-pattern>
        <url-pattern>/processors/editProcessor</url-pattern>
        <url-pattern>/processors/updateProcessor</url-pattern>
        <url-pattern>/processors/deleteProcessor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MotherboardServlet</servlet-name>
        <servlet-class>org.example.servlets.MotherboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MotherboardServlet</servlet-name>
        <url-pattern>/motherboards</url-pattern>
        <url-pattern>/motherboards/back</url-pattern>
        <url-pattern>/motherboards/listMotherboards</url-pattern>
        <url-pattern>/motherboards/addMotherboard</url-pattern>
        <url-pattern>/motherboards/editMotherboard</url-pattern>
        <url-pattern>/motherboards/updateMotherboard</url-pattern>
        <url-pattern>/motherboards/deleteMotherboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GraphicCardServlet</servlet-name>
        <servlet-class>org.example.servlets.GraphicCardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GraphicCardServlet</servlet-name>
        <url-pattern>/graphicCards</url-pattern>
        <url-pattern>/graphicCards/back</url-pattern>
        <url-pattern>/graphicCards/listGraphicCards</url-pattern>
        <url-pattern>/graphicCards/addGraphicCard</url-pattern>
        <url-pattern>/graphicCards/editGraphicCard</url-pattern>
        <url-pattern>/graphicCards/updateGraphicCard</url-pattern>
        <url-pattern>/graphicCards/deleteGraphicCard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>org.example.servlets.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
        <url-pattern>/orders/back</url-pattern>
        <url-pattern>/orders/listOrders</url-pattern>
        <url-pattern>/orders/addOrder</url-pattern>
        <url-pattern>/orders/editOrder</url-pattern>
        <url-pattern>/orders/updateOrder</url-pattern>
        <url-pattern>/orders/deleteOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductOrderServlet</servlet-name>
        <servlet-class>org.example.servlets.ProductOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductOrderServlet</servlet-name>
        <url-pattern>/productOrders</url-pattern>
        <url-pattern>/productOrders/back</url-pattern>
        <url-pattern>/productOrders/listProductOrders</url-pattern>
        <url-pattern>/productOrders/addProductOrder</url-pattern>
        <url-pattern>/productOrders/editProductOrder</url-pattern>
        <url-pattern>/productOrders/updateProductOrder</url-pattern>
        <url-pattern>/productOrders/deleteProductOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>org.example.servlets.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/products</url-pattern>
        <url-pattern>/products/back</url-pattern>
        <url-pattern>/products/listProducts</url-pattern>
        <url-pattern>/products/addProduct</url-pattern>
        <url-pattern>/products/editProduct</url-pattern>
        <url-pattern>/products/updateProduct</url-pattern>
        <url-pattern>/products/deleteProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReviewServlet</servlet-name>
        <servlet-class>org.example.servlets.ReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReviewServlet</servlet-name>
        <url-pattern>/reviews</url-pattern>
        <url-pattern>/reviews/back</url-pattern>
        <url-pattern>/reviews/listReviews</url-pattern>
        <url-pattern>/reviews/addReview</url-pattern>
